#!/bin/bash

# Pre-commit hook that triggers Claude Code to review staged files

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# ============================================================================
# AUTO_ACCEPT VALIDATION & LOGGING
# ============================================================================

VIOLATION_LOG="_logs/commit-bypasses.log"
SESSION_FILE=".git/hooks/commit-session.json"

# Ensure logs directory exists
mkdir -p _logs

# Fast hash calculation using git object IDs
calculate_staged_hash() {
    local files=$(git diff --cached --name-only --diff-filter=d)
    if [ -z "$files" ]; then
        echo "NO_STAGED_FILES"
        return
    fi
    echo "$files" | while IFS= read -r file; do
        git ls-files -s "$file" 2>/dev/null | awk '{print $2, $4}'
    done | shasum -a 256 | cut -d' ' -f1
}

count_staged_files() {
    git diff --cached --name-only --diff-filter=d | wc -l | tr -d ' '
}

# Check if AUTO_ACCEPT is being used
if [ "$AUTO_ACCEPT" = "true" ]; then
    # Calculate current content hash
    CURRENT_HASH=$(calculate_staged_hash)
    CURRENT_FILE_COUNT=$(count_staged_files)

    # Read previous session (if exists)
    if [ -f "$SESSION_FILE" ]; then
        if command -v jq &> /dev/null; then
            PREVIOUS_HASH=$(jq -r '.approved_hash // "NONE"' "$SESSION_FILE" 2>/dev/null || echo "NONE")
            PREVIOUS_STATUS=$(jq -r '.status // "NONE"' "$SESSION_FILE" 2>/dev/null || echo "NONE")
            PREVIOUS_FILE_COUNT=$(jq -r '.file_count // 0' "$SESSION_FILE" 2>/dev/null || echo 0)
            SESSION_ID=$(jq -r '.session_id // ""' "$SESSION_FILE" 2>/dev/null)
        else
            PREVIOUS_HASH=$(grep -oP '"approved_hash":\s*"\K[^"]+' "$SESSION_FILE" 2>/dev/null || echo "NONE")
            PREVIOUS_STATUS=$(grep -oP '"status":\s*"\K[^"]+' "$SESSION_FILE" 2>/dev/null || echo "NONE")
            PREVIOUS_FILE_COUNT=$(grep -oP '"file_count":\s*\K\d+' "$SESSION_FILE" 2>/dev/null || echo 0)
            SESSION_ID=$(grep -oP '"session_id":\s*"\K[^"]+' "$SESSION_FILE" 2>/dev/null)
        fi
        IS_RETRY="true"
    else
        PREVIOUS_HASH="NONE"
        PREVIOUS_STATUS="NONE"
        PREVIOUS_FILE_COUNT=0
        SESSION_ID="NEW_SESSION"
        IS_RETRY="false"
    fi

    # Extract task ID from commit message
    COMMIT_MSG_FILE=".git/COMMIT_EDITMSG"
    if [ -f "$COMMIT_MSG_FILE" ]; then
        TASK_ID=$(grep -oP 'Task:\s*\K[\d.]+' "$COMMIT_MSG_FILE" 2>/dev/null || echo "NONE")
        COMMIT_MSG_PREVIEW=$(head -n 1 "$COMMIT_MSG_FILE" | cut -c1-60)
    else
        TASK_ID="NONE"
        COMMIT_MSG_PREVIEW="<no message>"
    fi

    # Detect violations
    VIOLATION="NONE"
    VIOLATION_DETAIL=""

    # Violation 1: AUTO_ACCEPT on first attempt (no previous session)
    if [ "$IS_RETRY" = "false" ]; then
        VIOLATION="AUTO_ACCEPT_ON_FIRST_ATTEMPT"
        VIOLATION_DETAIL="AUTO_ACCEPT=true used on first commit attempt without prior approval"

    # Violation 2: AUTO_ACCEPT without approval
    elif [ "$PREVIOUS_STATUS" != "APPROVED" ]; then
        VIOLATION="AUTO_ACCEPT_WITHOUT_APPROVAL"
        VIOLATION_DETAIL="AUTO_ACCEPT=true used but previous status was: $PREVIOUS_STATUS"

    # Violation 3: AUTO_ACCEPT with modified content (hash mismatch)
    elif [ "$CURRENT_HASH" != "$PREVIOUS_HASH" ]; then
        VIOLATION="AUTO_ACCEPT_WITH_MODIFIED_CONTENT"
        VIOLATION_DETAIL="Content changed since approval (hash mismatch)"

    # Violation 4: AUTO_ACCEPT with file count mismatch
    elif [ "$CURRENT_FILE_COUNT" != "$PREVIOUS_FILE_COUNT" ]; then
        VIOLATION="AUTO_ACCEPT_FILE_COUNT_MISMATCH"
        VIOLATION_DETAIL="File count changed: $PREVIOUS_FILE_COUNT â†’ $CURRENT_FILE_COUNT"
    fi

    # If violation detected, log and warn agent
    if [ "$VIOLATION" != "NONE" ]; then
        # Write to human-readable log
        {
            echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
            echo "COMMIT VIOLATION DETECTED"
            echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
            echo "Timestamp:       $(date '+%Y-%m-%d %H:%M:%S')"
            echo "Violation Type:  $VIOLATION"
            echo "Task ID:         $TASK_ID"
            echo "Session ID:      $SESSION_ID"
            echo "Commit Message:  $COMMIT_MSG_PREVIEW"
            echo ""
            echo "Details:"
            echo "  $VIOLATION_DETAIL"
            echo ""
            echo "Context:"
            echo "  Is Retry:         $IS_RETRY"
            echo "  File Count:       $CURRENT_FILE_COUNT (Previous: $PREVIOUS_FILE_COUNT)"
            echo "  Current Hash:     ${CURRENT_HASH:0:16}..."
            echo "  Previous Hash:    ${PREVIOUS_HASH:0:16}..."
            echo "  Previous Status:  $PREVIOUS_STATUS"
            echo ""
            echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
            echo ""
        } >> "$VIOLATION_LOG"

        # Display warning to agent
        echo -e "${RED}âš ï¸  AUTO_ACCEPT VIOLATION DETECTED${NC}"
        echo ""
        echo -e "${YELLOW}Violation: $VIOLATION${NC}"
        echo "Details: $VIOLATION_DETAIL"
        echo ""
        echo "This attempt has been logged to: $VIOLATION_LOG"
        echo ""
        echo -e "${BLUE}ðŸ“‹ ACTION REQUIRED:${NC}"
        echo "Retry the commit WITHOUT AUTO_ACCEPT=true:"
        echo ""
        echo -e "  ${GREEN}git commit -m \"$COMMIT_MSG_PREVIEW...\"${NC}"
        echo ""
        echo "The commit will go through Claude code review, and you can use"
        echo "AUTO_ACCEPT=true after receiving approval."
        echo ""

        # Block commit
        exit 1
    fi

    # Valid AUTO_ACCEPT: Allow commit to proceed
    echo -e "${GREEN}âœ“ AUTO_ACCEPT validated (content matches approved version)${NC}"
    echo ""

    # Clean up session file (commit successful)
    rm -f "$SESSION_FILE"

    # Mark that pre-commit hook ran (for post-commit detection)
    touch _logs/.pre-commit-ran

    # Allow commit
    exit 0
fi

# ============================================================================
# NORMAL CLAUDE CODE REVIEW (no AUTO_ACCEPT)
# ============================================================================

echo -e "${BLUE}ðŸ” Running Claude Code review on staged files...${NC}\n"

# Get list of staged files (excluding deleted files)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${YELLOW}No staged files to review.${NC}"
    exit 0
fi

echo -e "${BLUE}Staged files:${NC}"
echo "$STAGED_FILES" | sed 's/^/  - /'
echo ""

# ============================================================================
# REVIEW CACHE - Hash-Based with Dependency Tracking
# ============================================================================

REVIEW_CACHE=".git/hooks/review-cache.json"
CACHE_EXPIRY_DAYS=30

# Initialize cache if it doesn't exist
if [ ! -f "$REVIEW_CACHE" ]; then
    echo "{}" > "$REVIEW_CACHE"
fi

# Extract dependencies from a file (imports/requires)
extract_dependencies() {
    local file=$1
    local deps=""

    # TypeScript/JavaScript: import statements
    deps=$(grep -E "^import .* from ['\"](.+)['\"]" "$file" 2>/dev/null | \
           sed -E "s/.*from ['\"](.+)['\"].*/\1/" || true)

    # TypeScript/JavaScript: require statements
    deps="$deps"$'\n'$(grep -E "require\\(['\"](.+)['\"]\\)" "$file" 2>/dev/null | \
           sed -E "s/.*require\\(['\"](.+)['\"]\\).*/\1/" || true)

    # Python: import/from statements
    deps="$deps"$'\n'$(grep -E "^(from|import) " "$file" 2>/dev/null | \
           awk '{print $2}' || true)

    # Go: import statements
    deps="$deps"$'\n'$(grep -E '^import "' "$file" 2>/dev/null | \
           sed -E 's/.*"(.+)".*/\1/' || true)

    # Remove empty lines, relative path indicators, and duplicates
    echo "$deps" | grep -v '^$' | sed 's/^\.\///' | sort -u
}

# Calculate dependency fingerprint (hash of all dependency hashes)
calculate_dep_fingerprint() {
    local file=$1
    local deps=$(extract_dependencies "$file")
    local fingerprint=""

    if [ -z "$deps" ]; then
        echo "NO_DEPS"
        return
    fi

    # For each dependency, try to resolve and hash
    while IFS= read -r dep; do
        # Skip external packages (node_modules, etc.)
        if [[ "$dep" =~ ^(@|[a-z-]+)/ ]] || [[ ! "$dep" =~ \. ]]; then
            # External dependency - use import string itself
            fingerprint="$fingerprint:$dep"
        else
            # Local dependency - resolve and hash
            local dep_file=""
            local dir=$(dirname "$file")

            # Try to resolve relative import
            for ext in "" ".ts" ".js" ".py" ".go"; do
                if [ -f "$dir/$dep$ext" ]; then
                    dep_file="$dir/$dep$ext"
                    break
                fi
            done

            if [ -n "$dep_file" ] && [ -f "$dep_file" ]; then
                local dep_hash=$(git hash-object "$dep_file" 2>/dev/null || echo "MISSING")
                fingerprint="$fingerprint:$dep_hash"
            else
                fingerprint="$fingerprint:$dep"
            fi
        fi
    done <<< "$deps"

    # Hash the combined fingerprint
    echo -n "$fingerprint" | shasum -a 256 | cut -d' ' -f1
}

# Check if cache entry is valid
check_cache() {
    local file=$1
    local current_hash=$(git hash-object "$file")
    local current_dep_fp=$(calculate_dep_fingerprint "$file")

    # Extract from cache using jq if available, otherwise grep
    if command -v jq &> /dev/null; then
        local cached_hash=$(jq -r --arg file "$file" '.[$file].content_hash // "NONE"' "$REVIEW_CACHE" 2>/dev/null || echo "NONE")
        local cached_dep_fp=$(jq -r --arg file "$file" '.[$file].dependency_fingerprint // "NONE"' "$REVIEW_CACHE" 2>/dev/null || echo "NONE")
        local cached_status=$(jq -r --arg file "$file" '.[$file].review_status // "NONE"' "$REVIEW_CACHE" 2>/dev/null || echo "NONE")
        local cached_timestamp=$(jq -r --arg file "$file" '.[$file].last_reviewed // "0"' "$REVIEW_CACHE" 2>/dev/null || echo "0")
    else
        # Fallback: simple grep-based extraction
        local entry=$(grep -A 5 "\"$file\"" "$REVIEW_CACHE" 2>/dev/null || echo "")
        local cached_hash=$(echo "$entry" | grep -oP '"content_hash":\s*"\K[^"]+' || echo "NONE")
        local cached_dep_fp=$(echo "$entry" | grep -oP '"dependency_fingerprint":\s*"\K[^"]+' || echo "NONE")
        local cached_status=$(echo "$entry" | grep -oP '"review_status":\s*"\K[^"]+' || echo "NONE")
        local cached_timestamp=$(echo "$entry" | grep -oP '"last_reviewed":\s*"\K[^"]+' || echo "0")
    fi

    # Check if cache is expired
    if [ "$cached_timestamp" != "0" ]; then
        local now=$(date +%s)
        # Platform-specific date parsing
        local cached_epoch
        if [[ "$OSTYPE" == "darwin"* ]]; then
            # macOS
            cached_epoch=$(date -j -f "%Y-%m-%dT%H:%M:%S" "${cached_timestamp%%Z}" +%s 2>/dev/null || echo "0")
        else
            # Linux
            cached_epoch=$(date -d "$cached_timestamp" +%s 2>/dev/null || echo "0")
        fi
        local age_days=$(( (now - cached_epoch) / 86400 ))

        if [ $age_days -gt $CACHE_EXPIRY_DAYS ]; then
            echo "EXPIRED"
            return
        fi
    fi

    # Cache hit if: hash matches AND dep fingerprint matches AND status is APPROVED
    if [[ "$current_hash" == "$cached_hash" ]] && \
       [[ "$current_dep_fp" == "$cached_dep_fp" ]] && \
       [[ "$cached_status" == "APPROVED" ]]; then
        echo "HIT"
    else
        echo "MISS"
    fi
}

# Separate files into cached (skip) and needs-review
CACHED_FILES=()
REVIEW_FILES=()

echo -e "${CYAN}Checking review cache...${NC}"

while IFS= read -r file; do
    cache_status=$(check_cache "$file")

    if [ "$cache_status" == "HIT" ]; then
        CACHED_FILES+=("$file")
        echo -e "  ${GREEN}âœ“${NC} $file (cached - previously approved)"
    else
        REVIEW_FILES+=("$file")
        if [ "$cache_status" == "EXPIRED" ]; then
            echo -e "  ${YELLOW}ðŸ“‹${NC} $file (cache expired - needs review)"
        else
            echo -e "  ${YELLOW}ðŸ“‹${NC} $file (needs review)"
        fi
    fi
done <<< "$STAGED_FILES"

echo ""

# If all files are cached, skip review
if [ ${#REVIEW_FILES[@]} -eq 0 ]; then
    echo -e "${GREEN}âœ… All staged files previously approved (cache hit)${NC}"
    echo -e "${GREEN}   Skipping Claude review - no changes detected${NC}"
    echo ""
    echo -e "${CYAN}Cached files (${#CACHED_FILES[@]}):${NC}"
    for file in "${CACHED_FILES[@]}"; do
        echo "  - $file"
    done
    echo ""

    # Mark that pre-commit hook ran
    touch _logs/.pre-commit-ran
    exit 0
fi

# Show review summary
echo -e "${CYAN}Review summary:${NC}"
echo -e "  ${GREEN}Cached (skip):${NC} ${#CACHED_FILES[@]} files"
echo -e "  ${YELLOW}Needs review:${NC} ${#REVIEW_FILES[@]} files"
echo ""

if [ ${#CACHED_FILES[@]} -gt 0 ]; then
    echo -e "${GREEN}Skipping review for cached files:${NC}"
    for file in "${CACHED_FILES[@]}"; do
        echo "  - $file"
    done
    echo ""
fi

echo -e "${YELLOW}Reviewing files:${NC}"
for file in "${REVIEW_FILES[@]}"; do
    echo "  - $file"
done
echo ""

# Update STAGED_FILES to only include files that need review
STAGED_FILES=$(printf "%s\n" "${REVIEW_FILES[@]}")

# Essential context files (always include)
ESSENTIAL_CONTEXT=(
    "./_docs/architecture.md"
    "./_docs/best-practices.md"
    "./.cursor/rules/base.mdc"
    "./memory-bank/projectbrief.md"
)

# Conditional context files (include if relevant)
CONDITIONAL_CONTEXT=(
    "./memory-bank/activeContext.md"
    "./memory-bank/systemPatterns.md"
)

# Build essential context section
CONTEXT_PROMPT="First, read these essential context files to understand the project:

**Essential Context (always read):**"
for file in "${ESSENTIAL_CONTEXT[@]}"; do
    if [ -f "$file" ]; then
        CONTEXT_PROMPT="${CONTEXT_PROMPT}
- $file"
    fi
done

# Add instruction to follow best-practices links
CONTEXT_PROMPT="${CONTEXT_PROMPT}

**IMPORTANT - Best Practices Context:**
After reading ./_docs/best-practices.md, if it contains relative links to chunked
best practice documents (e.g., ./best-practices/chunk-name.md), you MUST read
each linked file that is relevant to the technologies in the staged files.

These chunked documents contain technology-specific best practices that are
critical for reviewing the code correctly."

# Add conditional context
CONTEXT_PROMPT="${CONTEXT_PROMPT}

**Conditional Context (read if relevant to changes):**"
for file in "${CONDITIONAL_CONTEXT[@]}"; do
    if [ -f "$file" ]; then
        CONTEXT_PROMPT="${CONTEXT_PROMPT}
- $file (read if changes involve current work or architecture)"
    fi
done

# Extract task ID from commit message (if present)
COMMIT_MSG_FILE=".git/COMMIT_EDITMSG"
TASK_CONTEXT=""
if [ -f "$COMMIT_MSG_FILE" ]; then
    TASK_ID=$(grep -oP 'Task:\s*\K[\d.]+' "$COMMIT_MSG_FILE" 2>/dev/null || echo "")
    if [ -n "$TASK_ID" ]; then
        TASK_CONTEXT="

**Task Context:**
This commit relates to Task $TASK_ID. Consider the task requirements when reviewing."
    fi
fi

# Create a prompt for Claude with structured response format
PROMPT="${CONTEXT_PROMPT}${TASK_CONTEXT}

---

## CODE REVIEW REQUEST

Please review the following staged files for this commit.

**Staged files:**
$STAGED_FILES

**Review criteria:**
- Code quality and best practices
- Potential bugs or issues
- Security vulnerabilities
- Performance concerns
- Code style consistency
- Alignment with project architecture and best practices

**IMPORTANT: Provide your response in the following structured format:**

\`\`\`markdown
## CODE REVIEW RESULT

**Status**: [APPROVED / ISSUES FOUND]

### Critical Issues
[If none, write \"None\"]
[If found, list each issue with:
 - Severity: [CRITICAL/HIGH/MEDIUM]
 - Location: [file:line]
 - Description: [what's wrong]
 - Fix: [how to fix]]

### Non-Blocking Recommendations
[If none, write \"None\"]
[If found, list each recommendation with:
 - Type: [Quality/Performance/Style/Documentation]
 - Suggestion: [what to improve]
 - Rationale: [why this would help]]

### Decision Summary
[APPROVED] - Ready to commit [with/without recommendations]
[ISSUES FOUND] - Must fix critical issues before commit
\`\`\`

**Guidelines:**
- Be concise but specific
- Focus on issues that matter (not nitpicks)
- Provide actionable feedback
- Consider the task context if provided"

# Run Claude Code in print mode for non-interactive review
echo -e "${BLUE}Generating code review...${NC}\n"
CLAUDE_OUTPUT=$(claude --print "$PROMPT" 2>/dev/null)
echo "$CLAUDE_OUTPUT"

CLAUDE_EXIT_CODE=$?

if [ $CLAUDE_EXIT_CODE -ne 0 ]; then
    echo -e "\n${YELLOW}âš ï¸  Claude Code review failed or was skipped.${NC}"
fi

# ============================================================================
# SAVE SESSION STATE (for AUTO_ACCEPT validation on retry)
# ============================================================================

# Calculate content hash and file count for this commit attempt
CURRENT_HASH=$(calculate_staged_hash)
CURRENT_FILE_COUNT=$(count_staged_files)

# Generate session ID
if [ ! -f "$SESSION_FILE" ]; then
    SESSION_ID="session-$(date +%s)-$$"
else
    # Reuse existing session ID if available
    if command -v jq &> /dev/null; then
        SESSION_ID=$(jq -r '.session_id // ""' "$SESSION_FILE" 2>/dev/null)
    else
        SESSION_ID=$(grep -oP '"session_id":\s*"\K[^"]+' "$SESSION_FILE" 2>/dev/null)
    fi
    [ -z "$SESSION_ID" ] && SESSION_ID="session-$(date +%s)-$$"
fi

# Parse Claude's response for approval status
if echo "$CLAUDE_OUTPUT" | grep -q "Status.*APPROVED"; then
    CLAUDE_STATUS="APPROVED"
elif echo "$CLAUDE_OUTPUT" | grep -q "Status.*ISSUES"; then
    CLAUDE_STATUS="ISSUES_FOUND"
else
    # Legacy format fallback
    if echo "$CLAUDE_OUTPUT" | grep -iEq "APPROVED|Ready to commit|No issues found|LGTM|Looks good"; then
        CLAUDE_STATUS="APPROVED"
    else
        CLAUDE_STATUS="UNKNOWN"
    fi
fi

# Update review cache if review was approved
if [ "$CLAUDE_STATUS" = "APPROVED" ]; then
    echo -e "${GREEN}Updating review cache for approved files...${NC}"

    # Initialize cache file if it doesn't exist
    if [ ! -f "$REVIEW_CACHE" ]; then
        echo "{}" > "$REVIEW_CACHE"
    fi

    # Update cache for each file that was reviewed (REVIEW_FILES)
    for file in "${REVIEW_FILES[@]}"; do
        if [ -f "$file" ]; then
            # Calculate current hash and dependency fingerprint
            file_hash=$(git hash-object "$file")
            dep_fingerprint=$(calculate_dep_fingerprint "$file")

            # Extract dependencies for storage
            deps=$(extract_dependencies "$file")
            deps_json="[]"
            if [ -n "$deps" ]; then
                # Convert dependencies to JSON array
                deps_json="["
                first=true
                while IFS= read -r dep; do
                    if [ "$first" = true ]; then
                        first=false
                    else
                        deps_json="$deps_json,"
                    fi
                    # Escape quotes in dependency path
                    escaped_dep=$(echo "$dep" | sed 's/"/\\"/g')
                    deps_json="$deps_json\"$escaped_dep\""
                done <<< "$deps"
                deps_json="$deps_json]"
            fi

            # Get current commit hash for reference
            reviewer_commit=$(git rev-parse HEAD 2>/dev/null || echo "uncommitted")

            # Prepare cache entry
            timestamp=$(date -u '+%Y-%m-%dT%H:%M:%SZ')
            escaped_file=$(echo "$file" | sed 's/"/\\"/g')

            # Update cache using jq if available, otherwise manual JSON manipulation
            if command -v jq &>/dev/null; then
                # Use jq for clean JSON manipulation
                tmp_cache=$(mktemp)
                jq --arg file "$file" \
                   --arg hash "$file_hash" \
                   --argjson deps "$deps_json" \
                   --arg dep_fp "$dep_fingerprint" \
                   --arg ts "$timestamp" \
                   --arg status "APPROVED" \
                   --arg commit "$reviewer_commit" \
                   '.[$file] = {
                       "content_hash": $hash,
                       "dependencies": $deps,
                       "dependency_fingerprint": $dep_fp,
                       "last_reviewed": $ts,
                       "review_status": $status,
                       "reviewer_commit": $commit
                   }' "$REVIEW_CACHE" > "$tmp_cache" && mv "$tmp_cache" "$REVIEW_CACHE"
            else
                # Fallback: manual JSON manipulation (append/replace entry)
                # This is a simplified version that appends to the JSON
                # Note: This doesn't handle duplicate keys perfectly, but cache validation handles it
                tmp_cache=$(mktemp)

                # Read existing cache, remove trailing } if exists
                existing=$(cat "$REVIEW_CACHE" | sed 's/}[[:space:]]*$//')

                # Check if cache is empty object
                if echo "$existing" | grep -q "^{[[:space:]]*$"; then
                    # Empty cache - first entry
                    cat > "$tmp_cache" <<CACHE_EOF
{
  "$escaped_file": {
    "content_hash": "$file_hash",
    "dependencies": $deps_json,
    "dependency_fingerprint": "$dep_fingerprint",
    "last_reviewed": "$timestamp",
    "review_status": "APPROVED",
    "reviewer_commit": "$reviewer_commit"
  }
}
CACHE_EOF
                else
                    # Has entries - append with comma
                    cat > "$tmp_cache" <<CACHE_EOF
$existing,
  "$escaped_file": {
    "content_hash": "$file_hash",
    "dependencies": $deps_json,
    "dependency_fingerprint": "$dep_fingerprint",
    "last_reviewed": "$timestamp",
    "review_status": "APPROVED",
    "reviewer_commit": "$reviewer_commit"
  }
}
CACHE_EOF
                fi
                mv "$tmp_cache" "$REVIEW_CACHE"
            fi
        fi
    done

    echo -e "${GREEN}âœ“ Cache updated for ${#REVIEW_FILES[@]} file(s)${NC}"
fi

# Get list of staged files
STAGED_FILES_LIST=$(git diff --cached --name-only --diff-filter=d)

# Save session state to JSON file
cat > "$SESSION_FILE" <<EOF
{
  "session_id": "$SESSION_ID",
  "task_id": "$TASK_ID",
  "timestamp": "$(date '+%Y-%m-%d %H:%M:%S')",
  "status": "$CLAUDE_STATUS",
  "approved_hash": "$CURRENT_HASH",
  "file_count": $CURRENT_FILE_COUNT,
  "staged_files": [
$(echo "$STAGED_FILES_LIST" | sed 's/^/    "/;s/$/"/' | paste -sd ',' -)
  ]
}
EOF

# Check for non-interactive mode (CI or explicit flag)
if [ "$AUTO_ACCEPT" = "true" ]; then
    echo -e "${GREEN}âœ“ Non-interactive mode: proceeding with commit...${NC}"
    exit 0
fi

# Ask user if they want to proceed
echo -e "\n${YELLOW}Do you want to proceed with the commit? (y/n/v)${NC}"
echo -e "${YELLOW}  y - Yes, proceed with commit${NC}"
echo -e "${YELLOW}  n - No, cancel commit${NC}"
echo -e "${YELLOW}  v - View full diff before deciding${NC}"
read -r -p "Choice: " response </dev/tty

case "$response" in
    [vV])
        git diff --cached
        echo -e "\n${YELLOW}Proceed with commit after viewing diff? (y/n)${NC}"
        read -r -p "Choice: " response2 </dev/tty
        case "$response2" in
            [yY])
                echo -e "${GREEN}âœ“ Proceeding with commit...${NC}"
                # Mark that pre-commit hook ran (for post-commit detection)
                touch _logs/.pre-commit-ran
                exit 0
                ;;
            *)
                echo -e "${RED}âœ— Commit cancelled.${NC}"
                exit 1
                ;;
        esac
        ;;
